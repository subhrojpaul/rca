._document_row {
	display: inline-block;
	margin: 5vh auto;
	padding: 0;
	overflow: auto;
}
._document_col {
  	height: 230px;
  	width: 165px;
  	border:1px dashed #CCC;
  	margin-bottom: 30px;
  	position: relative;
  	float: left;
  	margin-right: 13px;
  	background-color: #FFF;
}
._lable {
	border-radius: 30px;
	background-color: #02B2F6;
	padding: 0px 15px;
	font-size: 9px;
	color: #FFF;
	width: 140px;
	margin:0 auto;
	text-align: center;
	position: absolute;
	left: 0;
	bottom: -10px;
	right: 0;
	z-index: 3;
}
._browse {
	padding: 4em 1em 3em;
	font-family: 'UbuntuM';
	cursor: pointer;
	p {
		text-align: center;
		font-size: 11px;
		color: #666;
		margin-top: 10px;
	}
	._highlight {
		color: #E84B4B;
	}
}
._visa_xs {
	position: absolute;
	top: 10px;
	left: 10px;
}
._thumbnail {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	top: 0;
	width: 100%;
	input[type=file] {
		opacity: 0;
		border:none;
		height: 100%;
		width: 100%;
		cursor: pointer;
	}
}
.preview {
	position: absolute;
	z-index: 1;
	top: 0;
	bottom: 0;
	img {
		display: none;
	}
}
.preview:hover .preview_overlay {
	display: block;
	z-index: 1;
}
.preview_overlay {
	background: #000000;
	opacity: .8;
	position: absolute;
	top: 0;
	width: 100%;
	height: 100%;
	display: none;
	._edit_now {
		text-align: center;
		display: block;
		margin-top: 7em;
		cursor: pointer;
		i {
			color: #FFF;
			font-size: 25px;
		}
	}
}
._action_bottom {
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	background-color: #FFF;
	height: 60px;
	z-index: 999;
	line-height: 60px;
	padding: 0 3em;
	._app_heading_left {
		float: left;
		p {
			font-size: 12px;
			color: #666;
		}
		._angle_right {
			padding: 0 1em;
		}
	}
}
/* loader */
.load {
  width: 100%;
  height: 100%;
  overflow: auto;
  margin: auto;
  position: absolute;
  top: 0; left: 0; bottom: 0; right: 0;
  background-color: #FFF;
  display: none;
  z-index: 2;
 
}
.loader {
  height: 5px;
  width: 50%;
  position: relative;
  overflow: hidden;
  background-color: #ddd;
  border-radius: 30px;
  z-index: 5;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.loader:before{
  display: block;
  position: absolute;
  content: "";
  left: -100px;
  width: 200px;
  height: 5px;
  background-color: #2980b9;
  animation: loading 7s linear infinite;
}
@keyframes loading {
    from {left: -200px; width: 30%;}
    50% {width: 30%;}
    70% {width: 70%;}
    80% { left: 50%;}
    95% {left: 120%;}
    to {left: 100%;}
}
/* loader end */





